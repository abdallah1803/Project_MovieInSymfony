{% extends 'base.html.twig' %}


{% block title %}Film{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/login.css') }}">
{% endblock %}

{% block body %}
    <div class="login-box">
        {{ form_start(form) }}
            <h2>Register</h2>

            <div class="user-box">
                {{ form_widget(form.name) }}
                <label>Name</label>
            </div>
            <div class="user-box">
                {{ form_widget(form.email) }}
                <label>Email</label>
            </div>


            <div class="user-box">
                {{ form_widget(form.username) }}
                <label>Username</label>

            </div>
            <div class="user-box">
                {{ form_widget(form.plainPassword) }}
                <label>Password</label>
            </div>




        <button type="submit" data-text="Awesome" class="button" id="user.submit" >

            <span class="actual-text">&nbsp;register&nbsp;</span>

            <span class="hover-text" aria-hidden="true">&nbsp;register&nbsp;</span>

        </button>

        {{ form_end(form) }}
        <br>
        <center>
            <a href="{{ path('app_user_login') }}">Login</a>
        </center>
    </div>
{% endblock %}

