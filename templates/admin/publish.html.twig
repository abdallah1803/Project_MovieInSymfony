{% extends 'homepage.html.twig' %}


{% block title %}Film{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/movie.css') }}">
{% endblock %}

{% block body %}


    <br><br><br><br><br>
    <div class="login-box">
        {{ form_start(form) }}
        <h2>Publish content</h2>


        <div class="user-box">
            {{ form_widget(form.Title) }}
            <label>The title</label>
        </div>
        <div class="user-box">
            {{ form_widget(form.type) }}
            <label>Type (series or movie)</label>
        </div>


        <div class="user-box">
            {{ form_widget(form.category) }}
            <label>Category</label>

        </div>
        <div class="user-box">
            {{ form_widget(form.linkFilm) }}
            <label>movie link Id</label>
        </div>
        <div class="user-box" style="">
            {{ form_widget(form.poster) }}
            <label>link movie poster</label>
        </div>
        <div class="user-box" style="">
            {{ form_widget(form.description) }}
            <label>Description</label>
        </div>

        <button data-text="Awesome" class="button">
            <span class="actual-text">&nbsp;Publish&nbsp;</span>
            <span class="hover-text" aria-hidden="true">&nbsp;Publish&nbsp;</span>
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}

